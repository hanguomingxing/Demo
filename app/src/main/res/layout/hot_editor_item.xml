<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/guanzhu"
        android:focusable="true"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="20px">

        <CheckBox
            android:id="@+id/hot_like_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/message_praise"
            android:button="@null" />

        <TextView
            android:id="@+id/hot_likeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:gravity="center"
            android:text="1" />
    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="2px"
        android:layout_height="match_parent"
        android:background="#EEEEEEEE" />

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/hot_share_llt"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="20px">

        <ImageView
            android:id="@+id/hot_share_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/forwarding" />

        <TextView
            android:id="@+id/hot_shareCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:gravity="center"
            android:text="1" />
    </com.zhy.autolayout.AutoLinearLayout>
    <View
        android:layout_width="2px"
        android:layout_height="match_parent"
        android:background="#EEEEEEEE" />
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="20px">

        <ImageView
            android:id="@+id/hot_message_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pinglun" />

        <TextView
            android:id="@+id/hot_messageCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:gravity="center"
            android:text="1" />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
