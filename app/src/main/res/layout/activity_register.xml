<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F1F1F1"
    >

    <include layout="@layout/common_title"/>
    <!--申请账号-->
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_marginTop="50px"
        >

        <ImageView
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/phone"
            android:layout_gravity="center_vertical"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="110px"
            android:layout_weight="1"
            android:hint="手机号码（即账号）"
            android:background="@color/white"
            android:textSize="30px"
            android:digits="0123456789"
            />
        <Button
            android:layout_width="400px"
            android:layout_height="60px"
            android:layout_weight="1"
            android:background="@drawable/loginmumb"
            android:text="发送验证码"
            android:textColor="#2AFFD0"
            android:layout_marginRight="15px"
            />
    </com.zhy.autolayout.AutoLinearLayout>

    <include layout="@layout/line_view"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff"
        >

        <ImageView
            android:layout_width="130px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/numb"
            android:layout_gravity="center_vertical"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="110px"
            android:layout_weight="1"
            android:hint="六位验证码"
            android:background="@color/white"
            android:id="@+id/editText"
            android:textSize="30px"
            />
    </com.zhy.autolayout.AutoLinearLayout>

    <include layout="@layout/line_view"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff"
        >

        <ImageView
            android:layout_width="130px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/code"
            android:layout_gravity="center_vertical"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="110px"
            android:layout_weight="1"
            android:hint="设置密码(6-16位，不能为纯字母或纯数字)"
            android:background="@color/white"
            android:textSize="30px"
            />
    </com.zhy.autolayout.AutoLinearLayout>

    <include layout="@layout/line_view"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18px"
        android:layout_marginRight="18px"
        android:layout_marginTop="107px"
        android:background="@drawable/logobutton"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="40px"
        android:id="@+id/button" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15px"
        >
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我已阅读并同意"
            style="@style/CheckboxTheme"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《每日学用户协议规范》"
            android:textColor="@color/green"
            android:id="@+id/role"
            />
    </com.zhy.autolayout.AutoLinearLayout>



</com.zhy.autolayout.AutoLinearLayout>
