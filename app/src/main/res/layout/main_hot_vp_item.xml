<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5px">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="280px">

        <ImageView
            android:id="@+id/main_hot_rv_img"
            android:layout_width="fill_parent"
            android:layout_height="105dp"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50px"
            android:layout_alignBottom="@+id/main_hot_rv_img"
            android:background="#a6595959">

            <TextView
                android:id="@+id/main_hot_rv_title"
                android:layout_width="fill_parent"
                android:layout_height="50px"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="24px"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="#7f000000"
                android:textSize="11sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/main_hot_rv_name"
            android:layout_width="wrap_content"
            android:layout_height="68px"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/main_hot_rv_img"
            android:layout_marginTop="14px"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#999999"
            android:textSize="13sp" />
    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoLinearLayout>